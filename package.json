{
  "name": "foodiefind-monorepo",
  "private": true,
  "workspaces": [
    "customer",
    "vendor",
    "rider"
  ],
  "scripts": {
    "dev:customer": "npm run dev --workspace=customer-app",
    "dev:vendor": "npm run dev --workspace=vendor-app",
    "dev:rider": "npm run dev --workspace=rider-app",
    "build:customer": "npm run build --workspace=customer-app",
    "build:vendor": "npm run build --workspace=vendor-app",
    "build:rider": "npm run build --workspace=rider-app",
    "build": "npm run build --workspaces",
    "check": "npm run check --workspaces"
  }
}